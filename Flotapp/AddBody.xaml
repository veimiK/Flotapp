<Window x:Class="Flotapp.AddBody"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flotapp"
        mc:Ignorable="d"
        Title="Dodawanie nadwozia" Height="300" Width="450">
    <Viewbox>
        <Grid>
    <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
            <TextBlock Text="Wprowadź nazwę nadwozia" Grid.Row="1" Grid.Column="1"/>
            <TextBox x:Name="textBoxNadwozie" Grid.Row="2" Grid.Column="1"/>
            <Button x:Name="buttonSave" Grid.Row="3" Grid.Column="1" Content="Zapisz" Margin="5px" Padding="5px" Click="buttonSave_Click"/>
        </Grid>
    </Viewbox>
</Window>
